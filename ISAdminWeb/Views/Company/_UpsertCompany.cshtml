@using DevExtreme.AspNet.Mvc
@using DevExtreme.AspNet.Mvc.Builders
@using ISAdminWeb.Models.Company;
@model ISAdminWeb.Models.Company.UPSertCompany_ViewModel;

@{
    ViewData["Title"] = "Companies";
}

<script src="~/js/Pages/Company/Edit.js"></script>
<form name="upsertCompany" asp-controller="Company" asp-action="UpsertCompany" mehod="POST" autocomplete="off">
    @(Html.DevExtreme().TextBoxFor(m => m.ID).LabelMode(EditorLabelMode.Floating).Label("ID").Visible(false))
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div>@(Html.DevExtreme().TextBoxFor(m => m.JuridicalName).LabelMode(EditorLabelMode.Floating).Label("JuridicalName"))</div>
                <div>@(Html.DevExtreme().TextBoxFor(m => m.CommercialName).LabelMode(EditorLabelMode.Floating).Label("CommercialName"))</div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                @(Html.DevExtreme().TextBoxFor(m => m.IDNO).LabelMode(EditorLabelMode.Floating).Label("IDNO"))
            </div>
            <div class="col-md-6">
                @(Html.DevExtreme().TextBoxFor(m => m.VATCode).LabelMode(EditorLabelMode.Floating).Label("VATCode"))
            </div>
            <div class="col-md-"></div>
        </div>
        <!-- Строка с тремя колонками -->
        <div class="row">
            <div class="col-md-4">
                <div class="col-md-4">

                    @(Html.DevExtreme().SelectBoxFor(m => m.CountryID).Placeholder("ChooseCountry").DataSource(new object[]
                        {
                            new { ID = 1, Name = "Молдова" },
                            new { ID = 2, Name = "Румыния" },
                            new { ID = 3, Name = "Россия" },
                            new { ID = 4, Name = "Украина" }
                        }).ValueExpr("ID").DisplayExpr("Name").LabelMode(EditorLabelMode.Floating).Label("Country"))
                   </div>
            <div class="col-md-4">
                @(Html.DevExtreme().TextBoxFor(m => m.JuridicalAddress).LabelMode(EditorLabelMode.Floating).Label("JuridicalAddress"))
            </div>
            <div class="col-md-4">
                @(Html.DevExtreme().TextBoxFor(m => m.OfficeAddress).LabelMode(EditorLabelMode.Floating).Label("OfficeAddress"))
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @(Html.DevExtreme().TextBoxFor(m => m.IBAN).LabelMode(EditorLabelMode.Floating).Label("IBAN"))
            </div>
            <div class="col-md-4">
                @(Html.DevExtreme().TextBoxFor(m => m.BIC).LabelMode(EditorLabelMode.Floating).Label("BIC"))
            </div>
            <div class="col-md-4">
                @(Html.DevExtreme().TextBoxFor(m => m.Bank).LabelMode(EditorLabelMode.Floating).Label("Bank"))
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @(Html.DevExtreme().TextBoxFor(m => m.ShortName).LabelMode(EditorLabelMode.Floating).Label("Alias"))
            </div>
            <div class="col-md-6">
                @(Html.DevExtreme().TagBoxFor(m => m.ESMAlias).Items(Model.ESMAlias).InputAttr("aria-label", "ESMAliasCompany").ID("ESMAliasCompany").LabelMode(EditorLabelMode.Floating).Label("AliasESM").AcceptCustomValue(true).HideSelectedItems(true))           
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div>@(Html.DevExtreme().TextBoxFor(m => m.WebSite).LabelMode(EditorLabelMode.Floating).Label("WebSite"))</div>
            </div>
        </div>
        <h5 class="message-text">Notifications </h5>
        <div class="row">
            <div class="col-md-12">
                <div>@(Html.DevExtreme().TextBoxFor(m => m.Email).LabelMode(EditorLabelMode.Floating).Label("Email"))</div>
                <div>@(Html.DevExtreme().TextBoxFor(m => m.PhoneNumber).LabelMode(EditorLabelMode.Floating).Label("PhoneNumber"))</div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
            @(Html.DevExtreme().Button().Type(ButtonType.Normal).Text("Cancel").OnClick("closeModalClick"))
        <div>@(Html.DevExtreme().Button().Type(ButtonType.Success).Text("Save").OnClick("onSubmitClick"))</div>
    </div>
</form>
